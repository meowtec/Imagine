{
  "name": "Imagine",
  "private": true,
  "version": "0.6.0",
  "description": "PNG/JPEG optimization app",
  "homepage": "https://github.com/meowtec/Imagine",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meowtec/Imagine.git"
  },
  "main": "./lib/bootstrap.js",
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext .js,.jsx,.ts,.tsx modules",
    "tscw": "tsc -w",
    "dev": "tsc && cross-env IMAGINE_ENV=development electron .",
    "build": "rimraf lib dist dist && tsc && cross-env IMAGINE_ENV=production webpack --mode=production --config lib/webpack.config.js",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "release": "npm run build && electron-builder --publish always",
    "test": "tsc && npm run lint && jest"
  },
  "author": "meowtec<bertonzh@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@types/classnames": "^2.2.11",
    "@types/electron-devtools-installer": "~2.2.0",
    "@types/fs-extra": "^9.0.7",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/pixelmatch": "^5.2.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/react-transition-group": "^4.4.1",
    "@types/react-window": "^1.8.2",
    "@types/redux-actions": "^2.6.1",
    "@types/semver": "^7.3.4",
    "@types/uuid": "^8.3.0",
    "@types/webpack-dev-server": "^3.11.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.2",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.2",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^24.0.0",
    "jest": "^26.6.3",
    "less": "^4.1.1",
    "less-loader": "^8.0.0",
    "pixelmatch": "^5.2.1",
    "popper.js": "^1.16.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-refresh": "^0.9.0",
    "react-transition-group": "^4.4.1",
    "react-use": "^17.2.1",
    "react-window": "^1.8.6",
    "redux": "^4.0.5",
    "redux-actions": "^2.6.5",
    "reselect": "^4.0.0",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "svg-sprite-loader": "^5.2.1",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.2",
    "webpack": "^5.24.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "child-process-promise": "^2.2.1",
    "electron-log": "^4.3.2",
    "electron-updater": "^4.3.5",
    "file-type": "^16.2.0",
    "fs-extra": "^9.1.0",
    "jimp": "^0.16.1",
    "lodash": "^4.17.21",
    "raw-body": "^2.4.1",
    "tslib": "^2.1.0"
  },
  "build": {
    "files": [
      "index.html",
      "lib",
      "dist/web",
      "bin/${os}/**/*"
    ],
    "asarUnpack": [
      "bin"
    ],
    "appId": "com.meowtec.imagine.app",
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "category": "Graphics",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "perMachine": true,
      "allowElevation": false
    },
    "fileAssociations": [
      {
        "role": "Editor",
        "ext": "png"
      },
      {
        "role": "Editor",
        "ext": "jpg"
      },
      {
        "role": "Editor",
        "ext": "jpeg"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
