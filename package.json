{
  "name": "Imagine",
  "version": "0.5.1",
  "description": "PNG/JPEG optimization app",
  "homepage": "https://github.com/meowtec/Imagine",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meowtec/Imagine.git"
  },
  "main": "./es/bootstrap.js",
  "scripts": {
    "lint": "tsc && tslint -t verbose -p .",
    "tscw": "tsc -w",
    "dev": "tsc && cross-env NODE_ENV=development electron .",
    "build": "rimraf lib htdocs dist && tsc && cross-env NODE_ENV=production webpack --mode=production --config es/webpack.config.js",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "release": "npm run build electron-builder --win --ia32",
    "test": "tsc && npm run lint && jest"
  },
  "author": "meowtec<bertonzh@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/electron-devtools-installer": "~2.2.0",
    "@types/fs-extra": "^8.0.1",
    "@types/html-webpack-plugin": "~3.2.1",
    "@types/jest": "^24.0.21",
    "@types/lodash": "^4.14.144",
    "@types/pify": "~3.0.2",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/react-hot-loader": "~4.1.0",
    "@types/react-redux": "^7.1.5",
    "@types/react-transition-group": "^4.2.3",
    "@types/redux-actions": "^2.6.1",
    "@types/semver": "^6.2.0",
    "@types/svg-sprite-loader": "^3.9.1",
    "@types/uuid": "^3.4.6",
    "@types/webpack-dev-server": "^3.4.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "electron": "^7.0.1",
    "electron-builder": "^22.1.0",
    "electron-devtools-installer": "^2.2.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "image-diff": "^2.0.0",
    "jest": "^24.9.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "pixelmatch": "^5.1.0",
    "popper.js": "^1.16.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-hot-loader": "^4.12.15",
    "react-redux": "^7.1.1",
    "react-transition-group": "^4.3.0",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "reselect": "^4.0.0",
    "rimraf": "^3.0.0",
    "style-loader": "^1.0.0",
    "svg-sprite-loader": "^4.1.6",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "tslint": "^6.0.0-beta0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "child-process-promise": "^2.2.1",
    "electron-log": "^3.0.8",
    "electron-updater": "^4.2.0",
    "file-type": "^12.4.0",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "pify": "^4.0.1",
    "raw-body": "^2.4.1",
    "read-chunk": "^3.2.0",
    "tslib": "^1.10.0"
  },
  "build": {
    "files": [
      "es",
      "htdocs",
      "bin/${os}/**/*"
    ],
    "asarUnpack": [
      "bin"
    ],
    "appId": "com.meowtec.imagine.app",
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "category": "Graphics",
      "publish": ["github"]
    },
    "nsis": {
      "perMachine": true
    },
    "fileAssociations": [
      {
        "role": "Editor",
        "ext": "png"
      },
      {
        "role": "Editor",
        "ext": "jpg"
      },
      {
        "role": "Editor",
        "ext": "jpeg"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
