{
  "name": "Imagine",
  "version": "0.3.0",
  "description": "PNG/JPEG optimization app",
  "homepage": "https://github.com/meowtec/Imagine",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meowtec/Imagine.git"
  },
  "main": "./lib/bootstrap.js",
  "scripts": {
    "lint": "tsc && tslint -t verbose -p .",
    "tscw": "tsc -w",
    "dev": "tsc && cross-env NODE_ENV=development electron .",
    "build": "rimraf lib htdocs dist && tsc && cross-env NODE_ENV=production webpack",
    "start": "npm run build && electron .",
    "pack": "npm run build && build --dir",
    "release": "npm run build && build -ml && build --win --ia32",
    "test": "tsc && npm run lint && jest"
  },
  "author": "meowtec<bertonzh@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/classnames": "2.2.3",
    "@types/electron-devtools-installer": "2.0.2",
    "@types/file-type": "5.2.1",
    "@types/fs-extra": "4.0.2",
    "@types/jest": "20.0.8",
    "@types/lodash": "4.14.74",
    "@types/pify": "0.0.28",
    "@types/popper.js": "1.10.0",
    "@types/react": "16.0.5",
    "@types/react-dom": "15.5.4",
    "@types/react-hot-loader": "3.0.4",
    "@types/react-redux": "5.0.7",
    "@types/react-transition-group": "2.0.4",
    "@types/redux-actions": "2.2.0",
    "@types/uuid": "3.4.2",
    "@types/webpack-dev-server": "2.4.1",
    "babili-webpack-plugin": "^0.1.2",
    "classnames": "^2.2.5",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "electron": "^1.7.6",
    "electron-builder": "^19.27.7",
    "electron-devtools-installer": "^2.2.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "image-diff": "^2.0.0",
    "jest": "^21.0.2",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "pixelmatch": "^4.0.2",
    "popper.js": "^1.12.5",
    "react": "^16.0.0-rc.2",
    "react-dom": "^16.0.0-rc.2",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-redux": "^5.0.6",
    "react-transition-group": "^2.2.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "reselect": "^3.0.1",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2",
    "svg-sprite-loader": "^3.2.5",
    "ts-jest": "^21.0.0",
    "ts-loader": "^2.3.7",
    "tslint": "5.7.0",
    "typescript": "2.5.2",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "child-process-promise": "^2.2.1",
    "electron-log": "^2.2.9",
    "electron-updater": "^2.8.9",
    "file-type": "^6.1.0",
    "fs-extra": "^4.0.1",
    "lodash": "^4.17.4",
    "pify": "^3.0.0",
    "raw-body": "^2.3.2",
    "read-chunk": "^2.1.0",
    "tslib": "^1.7.1"
  },
  "build": {
    "files": [
      "lib",
      "htdocs",
      "bin/${os}/**/*"
    ],
    "asarUnpack": [
      "bin"
    ],
    "appId": "com.meowtec.imagine.app",
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "category": "Graphics"
    },
    "nsis": {
      "perMachine": true
    },
    "fileAssociations": [
      {
        "ext": ["png", "jpg", "jpeg"],
        "role": "Editor"
      }
    ]
  }
}
